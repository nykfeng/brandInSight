<% layout("/layouts/boilerplateLoginSignUp.ejs") %>
    <main>
        <div class="login-logo">
            <i class="fa-solid fa-right-to-bracket linear-gradient-text"></i>
        </div>

        <section class="login-signup-container login-container">

            <form action="/login" method="POST" id="login-form">
                <!-- Email address -->
                <!-- <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" placeholder="email@address.com" required>
                </div> -->

                <!-- User name -->
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Password (Min. 8 characters)"
                        required>
                </div>
                <div class="button-group">
                    <button type="submit">Login</button>
                </div>
            </form>
            <div class="forgot-password">
                <a href="/password-recovery">Forgot password?</a>
            </div>
            <div class="register-account">
                <a href="/register"><button id="register">Create new account</button></a>
            </div>
        </section>

    </main>