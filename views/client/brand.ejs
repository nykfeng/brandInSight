<% layout("/layouts/boilerplateClient.ejs") %>

    <main id='brand-main'>
        <!-- brand heading section -->
        <header class="brand-header">
            <section class="brand-container flex">
                <div class="brand-logo-container">
                    <img src="<%=brand.logo.url %> " alt="" class="brand-logo">
                </div>
                <div class="brand-header-container flex">
                    <div class="brand-heading-container flex">
                        <div class="brand-header-title-container flex">
                            <div class="brand-type"><i class="fa-solid fa-building"></i> Public Company</div>
                            <div class="brand-name">
                                <%= brand.name %>
                            </div>
                            <a href="https://www.nvidia.com" class="brand-website">
                                <%= brand.website %>
                            </a>
                        </div>
                        <div class="brand-user-options flex">
                            <div class="brand-add-notes header-btn"><i class="fa-solid fa-clipboard"></i> Add Brand
                                Note
                            </div>
                            <div class="brand-subscribe-status header-btn"><i class="fa-solid fa-circle-check"></i>
                                Subscribed</div>
                        </div>
                    </div>
                    <div class="brand-header-tab-container flex">
                        <div class="brand-header-tab selected">
                            Summary
                        </div>
                        <div class="brand-header-tab">
                            Financial
                        </div>
                        <div class="brand-header-tab">
                            Contacts
                        </div>
                        <div class="brand-header-tab">
                            Signals & News
                        </div>
                    </div>
                </div>
            </section>
        </header>

        <!-- brand detail section -->
        <article class="brand-about" id="summary">
            <section class="brand-container flex">
                <div class="brand-details flex">
                    <div class="brand-details-heading flex">
                        <h1 class="brand-section-title">
                            <i class="fa-regular fa-building"></i> Brand Details
                        </h1>
                        <p class="brand-details-description">
                            <%= brand.description %>
                        </p>
                    </div>
                    <div class="brand-detail-list flex">
                        <ul class="flex">
                            <li class="brand-detail-item">
                                <span class="brand-detail-icon location"><i class="fa-solid fa-location-dot"></i></span>
                                <span class="brand-location">
                                    <%= brand.headquarters %>
                                </span>
                            </li>
                            <li class="brand-detail-item">
                                <span class="brand-detail-icon employee"><i class="fa-solid fa-user"></i></span>
                                <span class="brand-employee">
                                    <%= brand.employee %>
                                </span>
                            </li>
                            <li class="brand-detail-item">
                                <span class="brand-detail-icon stock"><i class="fa-solid fa-chart-line"></i></span>
                                <span class="brand-stock">
                                    <%= brand.typeOfCompany.stockTicker %>
                                </span>
                            </li>
                            <li class="brand-detail-item">
                                <a href="https://www.<%= brand.socialMedia.facebook.profileHandle  %>">
                                    <span class="brand-detail-icon facebook"><i
                                            class="fa-brands fa-facebook"></i></span>
                                    <span class="brand-facebook">
                                        <%= brand.socialMedia.facebook.likes %> Likes
                                    </span>
                                </a>
                            </li>
                            <li class="brand-detail-item">
                                <a href="https://www.<%= brand.socialMedia.twitter.profileHandle  %>">
                                    <span class="brand-detail-icon twitter"><i class="fa-brands fa-twitter"></i></span>
                                    <span class="brand-twitter">
                                        <%= brand.socialMedia.twitter.followers %> Followers
                                    </span>
                                </a>
                            </li>
                            <li class="brand-detail-item">
                                <a href="https://www.<%= brand.socialMedia.linkedin.profileHandle %>">
                                    <span class="brand-detail-icon linkedin"><i
                                            class="fa-brands fa-linkedin"></i></span>
                                    <span class="brand-linkedin"> Actively Hiring</span>
                                </a>
                            </li>

                        </ul>
                        <ul class="flex">
                            <li class="brand-detail-item">
                                <span class="brand-detail-item-property">Industry: </span>
                                <span class="brand-industry">
                                    <%= brand.industry %>
                                </span>
                            </li>
                            <li class="brand-detail-item">
                                <span class="brand-detail-item-property">Founded Date: </span>
                                <span class="brand-industry">
                                    <%= brand.foundedDate %>
                                </span>
                            </li>
                            <li class="brand-detail-item">
                                <span class="brand-detail-item-property">Founders: </span>
                                <span class="brand-industry">
                                    <%= brand.founders %>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="brand-hightlights flex">
                    <div class="brand-highlights-title">
                        <p class="brand-section-title">
                            <i class="fa-solid fa-bars-staggered"></i> Highlights
                        </p>
                    </div>
                    <div class="brand-highlights-container">
                        <ul class="brand-highlights-list flex">
                            <li class="brand-highlights-item">
                                <span class="brand-highlights-option">Acquisition: </span>
                                <span class="brand-highlights-number">
                                    <%= brand.highlights.acquisition %>
                                </span>
                            </li>
                            <li class="brand-highlights-item">
                                <span class="brand-highlights-option">Investment: </span>
                                <span class="brand-highlights-number">
                                    <%= brand.highlights.investment %>
                                </span>
                            </li>
                            <li class="brand-highlights-item">
                                <span class="brand-highlights-option">Yearly Ad Spend: </span>
                                <span class="brand-highlights-number">$<%= brand.highlights.adSpend %></span>
                            </li>
                            <li class="brand-highlights-item">
                                <span class="brand-highlights-option">Contacts: </span>
                                <span class="brand-highlights-number">
                                    <%= brand.highlights.contacts %>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>

