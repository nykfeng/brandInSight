<% layout("/layouts/boilerplateInternal.ejs") %>
    <div class="simple-nav">
        <button class="btn"><a href="/">Main Page</a></button>
        <button class="btn"><a href="/home">Home</a></button>
        <button class="btn"><a href="/internal">Internal Page</a></button>
    </div>



    <section class="internal-main">
        <h1>Employee Access Only Page</h1>
        <h2>Add brand information here</h2>

        <br>

        <h1>Add a new brand here:</h1>
        <form action="/brands" method="POST" class="form-add" enctype="multipart/form-data">
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" name="brand[name]">
            </div>
            <div>
                <label for="headquarters">Headquarters</label>
                <input type="text" id="headquarters" name="brand[headquarters]" size="50">
            </div>
            <div>
                <label for="website">Website</label>
                <input type="url" id="website" name="brand[website]" size="50" placeholder="https://example.com"
                    pattern="https://.*">
            </div>
            <div>
                <label for="employee">Employee number</label>
                <input type="number" id="employee" name="brand[employee]">

            </div>
            <div>
                <label for="description">Description</label>
                <textarea name="brand[description]" id="description" cols="30" rows="10"></textarea>
            </div>
            <div>
                <label for="logo">Logo</label>
                <input type="file" name="logo" id="">
            </div>

            <button class="btn">Submit</button>
        </form>

    </section>